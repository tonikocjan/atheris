# Enumeracije

# deklaracija enumeracije
enum Languages {
	case Cpp
	case Java
	case ObjectiveC, Swift
}

let x: Languages = Languages.Cpp
if x == Languages.Java {
	print("Java")
}
else {
	print("Some other language")
}


