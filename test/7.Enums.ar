import stdlib

# Enumeracije

# deklaracija enumeracije
enum Languages {
	case Cpp
	case Java
	case ObjectiveC, Swift
}

let x: Languages = Languages.Cpp
if x == Languages.Java {
	print(string: "Java")
}
else {
	print(string: "Some other language")
}


