enum Days: Int {
	case Monday, Tuesday
	case Wednesday, Thursday = 10, Friday
}

print(integer: Days.Monday.rawValue)
print(integer: Days.Tuesday.rawValue)
print(integer: Days.Wednesday.rawValue)
print(integer: Days.Thursday.rawValue)
print(integer: Days.Friday.rawValue)


# ƒçe je tip String, je privzeta vrednost ime memberja
